/* 全局样式 总结 */


/* 通用颜色样式 */
.g-color-red{  color:#F56568 }
.g-bgcolor-red{  background-color:#F56568;color:#FFFFFF }

/* 全局按钮样式 */
.g-ntb-red{
  display: inline-block;
  min-width: 60px;
  min-height: 28px;
  text-align: center;
  font-size: 14px;
  color:#FFFFFF;
  background: #F56567;
  border:1px solid #ff5566;
  border-radius: 3px;
  padding:12px 20px;
  display: inline-flex;
  justify-items: space-around;
  box-shadow: 0 0 6px #e8e8e8;
  opacity: 1;
}
.g-ntb-red:hover{  opacity: .9;  box-shadow: 0 0 12px #e8e8e8;  transition: all .3s ease-in;}

/* 红色线框按钮 */
.g-ntb-red-line{
  min-width: 60px;
  min-height: 28px;
  text-align: center;
  font-size: 14px;
  color:#F56567;
  background: rgba(245, 101, 103, 0.03);
  border:1px solid #ff5566;
  border-radius: 3px;
  padding:12px 20px;
  display: inline-flex;
  justify-items: space-around;
  box-shadow: 0 0 6px #e8e8e8;
  opacity: 1;
}

/* 胶囊按钮 - 红色 */
.g-btn-capsule-red{
  width: 65px;
  height: 28px;
  padding-left: 20px;
  padding-right: 20px;
  background: #F56568;
  border-radius: 100px;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 12px;
  font-family: MicrosoftYaHei;
  color: #FFFFFF;
}
.g-btn-capsule-red:hover{  box-shadow: 0 0 8px #e9b8b8;  transition: all .3s ease-in;  background: rgb(236, 90, 92) }
.g-btn-capsule-gred{
  min-width: 65px;
  height: 28px;
  padding-left: 20px;
  padding-right: 20px;
  background: #FFFFFF;
  border-radius: 100px;
  border: 1px solid #DCDFE6;
  display: inline-flex;
  justify-content: center;
  align-items: center;
  font-size: 12px;
  font-family: MicrosoftYaHei;
  color: #5A5E66;
}
.g-btn-capsule-gred:hover{
  box-shadow: 0 0 8px #e9b8b8;
  transition: all .3s ease-in;
}

.g-icon-close{
  width: 12px;
  position: relative;
  top:-6px;
}
.g-icon-close::before, .g-icon-close::after {
  position: absolute;
  content: '';
  width: 2px;
  height: 12px;
  background: rgb(167, 155, 155);
}
.g-icon-close::before {  transform: rotate(45deg)}
.g-icon-close::after {  transform: rotate(-45deg);}

.g-flex-right{  display: flex;  justify-content: flex-end;}
.g-flex-left{  display: flex;  justify-content: flex-start;}

.g-flex-center{  display: flex;  justify-content: center;}


/* 红色 类似促销的标签 父级盒子必须 position: relative; */
.g-tag-red {
  background: #F56667;  position: absolute;top:10px;left: 0;
  display: inline-block;  font-size: 12px; 
  line-height: 18px; position: relative; width: auto; height: 18px; margin: 0 10px 0 0;
  padding: 0 10px; font-family: PingFangSC-Medium, PingFang SC; font-weight: 500;  color: #FFFFFF;
}
.g-tag-red::after {
  content: "";  position: absolute;  left: 100%;  width: 0;  height: 0;  
  border-top: 9px solid #F56667;  border-right: 6px solid transparent; 
  border-bottom: 9px solid #F56667;
}


