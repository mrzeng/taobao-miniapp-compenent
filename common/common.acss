/* 水平分割线； 上下有24px 留白 */
.g-row-line24{
  width: 100%;
  height: 1px;
  background: #EBEEF5;
  margin: 24px 0;
}
.g-row-line-space16{
  width: 100%;
  height: 1px;
  background: #EBEEF5;
  margin: 16px 0;
}
.g-row-line-no-space{
  width: 100%;
  height: 1px;
  background: #EBEEF5;
}

/* 元素左边 向上的三角箭头 */
.g-triangle-up{ color:#F56567; }
.g-triangle-up::before{
  content: ""; width: 0;  height: 0;  
  border-left: 6px solid transparent;
  border-right: 6px solid transparent;
  border-bottom: 6px solid #F56567;
}
/* 元素左边 向下的三角箭头 */
.g-triangle-down{ color:#4ED2A8; }
.g-triangle-down::before{
  content: ""; width: 0;  height: 0;  
  border-left: 6px solid transparent;
  border-right: 6px solid transparent;
  border-top: 6px solid #4ED2A8;
}

.g-triangle-down-white{color:#ffffff;position: relative;}
.g-triangle-down-white::after{
  content: ""; width: 0;  height: 0;  
  border-left: 6px solid transparent;
  border-right: 6px solid transparent;
  border-top: 6px solid #ffffff;
  position: absolute;
  bottom: -6px;
  left:45%;
}

/* 文字前面加一个小圆点 */
/* 左边 蓝色 小圆点*/
.g-dot-blue{
  font-size: 16px;
  font-family: MicrosoftYaHeiSemibold;
  color: #AAAAAA;
  position: relative;
  line-height: 16px;
  padding-left: 10px;
  padding-right: 26px;
}
.g-dot-blue::before{
  content: "";
  position: absolute;
  left: -4px;
  top: 4px;
  width: 8px;
  height: 8px;
  background-color: #7294F6;
  border-radius: 4px;
}

