.l_tips {
  position: relative;
}

.t_content {
  position: absolute;
  z-index: 9999;
  min-width: 200px;
  padding: 12px;
  font-size: 14px;
  color: #434343;
  text-align: justify;
  border-radius: 4px;
  background-color: #fff;
  box-shadow:0px 0px 4px 0px rgba(51, 51, 51, 0.35);
  display: none;
}

.l_tips:hover .t_content {
  display: block;
}